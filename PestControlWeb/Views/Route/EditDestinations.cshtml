@model PestControlDll.Entities.Route
@{
    ViewBag.Title = "EditDestinations";
}

<h2>@Model.Name</h2>

<link href="~/Content/Site.css" rel="stylesheet" />

@if (Model != null)
{
    <table>
        @for (int i = 0; i < Model.Destinations.Count; i++)
        {
            <tr>
                <td>@Model.Destinations[i].FullAddress</td>
                <td><a class="btn btn-danger" href="/Route/ConfirmDeleteDestination/@Model.Destinations[i].Id">Remove</a></td>
            </tr>

        }
    </table>

    <form method="get" action="~/Route/ConfirmDeleteRoute/">
        <input type="hidden" name="routeId" value="@Model.Id"/>
        <button class="btn btn-danger">Delete route</button>
        <a href="~/Route/Index" class="btn btn-default">No, go back</a>

    </form>
}

