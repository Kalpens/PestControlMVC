@model PestControlDll.Entities.Route
@{
    ViewBag.Title = "EditDestinations";
}

<h2>Rediger destinationer</h2>

<link href="~/Content/Site.css" rel="stylesheet" />

@if (Model != null)
{
    <table>
        @for (int i = 0; i < Model.Destinations.Count; i++)
        {
            <tr>
                <td>@Model.Destinations[i].FullAddress</td>
                <td><a class="btn btn-danger" href="/Route/ConfirmDeleteDestination/@Model.Destinations[i]">Delete</a></td>
                @*<td>@Html.ActionLink("Delete", "ConfirmDeleteDestination", new { id = Model.Destinations[i].Id }, new { @class="btn btn-danger"})</td>*@
                @*<td><button href="~/Route/ConfirmDeleteDestination" type="submit" formmethod="post">Delete</button></td>*@
            </tr>

        }
    </table>
}

