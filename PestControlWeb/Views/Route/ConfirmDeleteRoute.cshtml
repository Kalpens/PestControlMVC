@model PestControlDll.Entities.Route
@{
    ViewBag.Title = "ConfirmDeleteRoute";
}

<h2>ConfirmDeleteRoute</h2>

<h3>Are you sure you want to delete @Model.Name ?</h3>

<form action="/Route/DeleteRoute" method="post">
    <input type="submit" value="Yes" class="btn btn-danger" />
    <input type="hidden" value="@Model.Id" name="routeId" />
</form>

<hr />
@Html.ActionLink("No, go back!", "EditDestinations", new { routeId = Model.Id }, new { @class = "btn btn-default" })
